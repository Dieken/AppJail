. "${AJ_CONFIG}"
. "${LIBDIR}/load"

lib_load "${SCRIPTSDIR}/default_env.sh"
lib_load "${LIBDIR}/log"
lib_load "${LIBDIR}/check_func"
lib_load "${LIBDIR}/jail"
lib_load "${LIBDIR}/replace"

main()
{
	local args="$1"
	if lib_check_empty "${args}"; then
		lib_err ${EX_USAGE} "usage: PKG [[--chroot | --jexec [--jail] | --local]] package ..."
	fi

	# Options
	local use_pkgchroot=0
	local use_pkgjail=0
	local use_pkgjexec=1
	local use_pkglocal=0

	# Arguments
	local args_list=`lib_split_jailparams "${args}"`
	local total_items=`printf "%s\n" "${args_list}" | wc -l`
	local current_index=0
	
	while [ ${current_index} -lt ${total_items} ]; do 
		current_index=$((current_index+1))
		local arg=`printf "%s\n" "${args_list}" | head -${current_index} | tail -n 1`

		if lib_check_empty "${arg}"; then
			continue
		fi

		case "${arg}" in
			--chroot)
				use_pkgchroot=1
				;;
			--jail)
				use_pkgjail=1
				;;
			--jexec)
				use_pkgjexec=1
				;;
			--local)
				use_pkglocal=1
				;;
			--)
				break
				;;
			--*)
				main # usage
				;;
			*)
				break
				;;
		esac
	done
	current_index=$((current_index-1))

	local pkg_args=
	local escape_chars='`"\'

	if [ ${use_pkgchroot} -eq 1 ]; then
		printf "%s" "\"\${APPJAIL_SCRIPT}\" pkg chroot \"\${APPJAIL_JAILNAME}\" install -y --"
	elif [ ${use_pkglocal} -eq 1 ]; then
		printf "%s" "pkg install -y --"
	elif [ ${use_pkgjexec} -eq 1 ]; then
		if [ ${use_pkgjail} -eq 1 ]; then
			pkg_args="-j"
		fi

		printf "%s" "\"\${APPJAIL_SCRIPT}\" pkg jail \"\${APPJAIL_JAILNAME}\" ${pkg_args} -- install -y --"
	fi

	while [ ${current_index} -lt ${total_items} ]; do 
		current_index=$((current_index+1))
		local pkg=`printf "%s\n" "${args_list}" | head -${current_index} | tail -n 1`
		if lib_check_empty "${pkg}"; then
			continue
		fi

		pkg=`lib_escape_string "${pkg}" "" "${escape_chars}"`

		printf " %s" "\"${pkg}\""
	done
	echo
}

main "$@"
