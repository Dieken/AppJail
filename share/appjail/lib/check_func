lib_check_func()
{
	local _o _func

	_func="$1"
	if [ -z "${_func}" ]; then
		lib_err ${EX_USAGE} "usage: lib_check_func function"
	fi

	_o="`type \"${_func}\" 2>&1`"
	if [ $? -eq 0 ]; then
		return 0
	else
		return 1
	fi
}
