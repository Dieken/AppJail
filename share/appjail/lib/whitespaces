lib_generate_whitespaces() {
	local _n

	_n="$1"
	if [ -z "${_n}" ]; then
		lib_err ${EX_USAGE} "usage: lib_generate_whitespace n"
	fi

	if [ $((${_n}*1)) -eq 0 ]; then
		return 0
	fi

	for i in `seq ${_n}`; do
		echo -n ' '
	done
}
