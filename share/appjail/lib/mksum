lib_mksum()
{
	local _f

	_f="$1"
	if [ -z "_${f}" ]; then
		lib_err ${EX_USAGE} "usage: lib_mksum file"
	fi

	sha256 -q "${_f}" || exit "${EX_NOINPUT}"
}

lib_mksum_str()
{
	local _s

	_s="$1"
	if [ -z "${_s}" ]; then
		sha256
	else
		echo "${_s}" | sha256
	fi
}
