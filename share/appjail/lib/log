_lib_time()
{
	echo -n `date +"[%H:%M:%S]"` >&2
}

lib_debug()
{
	_lib_time
	echo " $*" >&2
}

lib_warn()
{
	_lib_time
	echo " WARN: $*" >&2
}

lib_err()
{
	local errcode

	errcode="$1"
	shift
	_lib_time
	echo " FATAL: $*" >&2
	exit $errcode
}
