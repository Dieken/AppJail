unlink_desc="Unlinks a jail linked by the link command."

unlink_main()
{
	local jail

	jail="$1"

	if [ -z "${jail}" ]; then
		unlink_usage
		exit ${EX_USAGE}
	fi

	shift
	
	. "${LIBDIR}/replace"
	. "${LIBDIR}/su"

	unlink_appjail -c "${CONFIG}" -n "${jail}"
}

unlink_appjail()
{
	lib_su /bin/sh "${SCRIPTSDIR}/unlink.sh" $@
}

unlink_help()
{
	unlink_usage

	echo
	echo "${unlink_desc}"
	echo
	echo
	echo "  jail           The name of jail to be unlinked."
}

unlink_usage()
{
	echo "usage: unlink jail"
}
